header.header
  nav.nav.nav--tours
    a.nav__el(href='/') All tours
    form.nav__search
      button.nav__search-btn
        svg 
          use(xlink:href='/img/icons.svg#icon-search')
      input(type='text' placeholder='Search tours' class='nav__search-input')

  div.header__logo
    img(src='/img/logo-white.png' alt='Natours logo')

  nav.nav.nav--user
    if !user
      a.nav__el(href='/login') Log in 
      button.nav__el.nav__el--cta(href='/signup') Sign up
    else
      button#logout.nav__el.nav__el--logout Logout
      a.nav__el(href='/me')
        img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}` class='nav__user-img')
        span= user.name.split(' ')[0]    
